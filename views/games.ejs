<!doctype html>
<html lang="en">

<head>
    <% include partials/template/head.ejs %>
</head>

<body>

    <% include partials/template/navbar.ejs %>

    <!-- div class col = col-8 when in games/:gameID page -->
    <!-- Main content -->
    <div class="container">

        <% if (pageID == 'games'){%>
            <% gamesData.forEach((item,index)=>{ %>
        <div class="row">
            <div class="col d-inline-flex flex-column text-center">
                <h2><a href="games/<%= index %>"><%= item.title %></a></h2>
                <img class="coverPic align-self-center" src="../images/covers/<%= item.image %>" width="150px">
                <p><b>Release Date:</b><%= item.release_date %></p>
                <p><b>Platforms:</b><%= item.platforms %></p>
                
            </div>
        </div>
            <% }) %>
            
        <% } %>




            <!-- in game/:gameID -->
        <% if (pageID == 'gameID'){ %>
        <div class="row">
                <div class="col-8 d-inline-flex flex-column">
                    <h2 class="ml-4"><%= gamesData.title %></h2>
                    <img class="coverPicInfo" src="../images/covers/<%= gamesData.image %>" width="350px">
                    <p><b>Release Date:</b> <%= gamesData.release_date %></p>
                    <p><b>Platforms:</b> <%= gamesData.platforms %></p>
                    <p class="ml-4"><b>Summary:</b> <%= gamesData.summary %></p>
                </div>

            <!-- add in games/:gameID  -->
            <div class="col-4 border-left ">
                    <img src="https://via.placeholder.com/150" class="m-2" alt="">
                    <img src="https://via.placeholder.com/150" class="m-2" alt="">
                    <img src="https://via.placeholder.com/150" class="m-2" alt="">
                    <img src="https://via.placeholder.com/150" class="m-2" alt="">
                    <img src="https://via.placeholder.com/150" class="m-2" alt="">
                    <img src="https://via.placeholder.com/150" class="m-2" alt="">
            </div>
        </div>

    <% } %>
    </div> 

    
    <% include partials/template/footer.ejs %>
    
    <% include partials/template/scripts.ejs %>

</body>

</html>

